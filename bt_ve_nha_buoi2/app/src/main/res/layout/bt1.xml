<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_columnWeight="4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_vt_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <View
        android:id="@+id/v_01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gl_vt_50"
        app:layout_constraintHorizontal_weight="1"
        android:background="#B6ADAD"
        android:layout_width="0dp"
        android:layout_height="150dp"/>
    <View
        android:id="@+id/v_02"
        app:layout_constraintLeft_toRightOf="@id/v_01"
        app:layout_constraintBottom_toBottomOf="@id/v_01"
        android:background="#C25DCA"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintDimensionRatio="1:1"/>
    <View
        android:id="@+id/v_03"
        app:layout_constraintTop_toBottomOf="@id/v_02"
        app:layout_constraintLeft_toRightOf="@id/gl_vt_50"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#ff0"/>
    <View
        android:id="@+id/v_04"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_03"
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:background="#009688"/>
    <View
        android:id="@+id/v_05"
        app:layout_constraintTop_toBottomOf="@id/v_03"
        app:layout_constraintLeft_toRightOf="@id/v_04"
        app:layout_constraintBottom_toBottomOf="@id/v_04"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:background="#958464"/>
    <View
        android:id="@+id/v_06"
        app:layout_constraintTop_toBottomOf="@id/v_03"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="#000"
        app:layout_constraintDimensionRatio="1:1"/>
    <View
        android:id="@+id/v_07"
        app:layout_constraintRight_toRightOf="@id/gl_vt_50"
        app:layout_constraintTop_toBottomOf="@id/v_05"
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:background="#E91E63"/>

    <View
        android:id="@+id/v_08"
        app:layout_constraintLeft_toRightOf="@id/gl_vt_50"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/v_07"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#8BB55D"/>
    <View
        app:layout_constraintTop_toBottomOf="@id/v_07"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/v_07"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#DFCBCB"/>
    <View
        app:layout_constraintLeft_toRightOf="@id/gl_vt_50"
        app:layout_constraintTop_toBottomOf="@id/v_08"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:background="#5891E4"/>

</androidx.constraintlayout.widget.ConstraintLayout>