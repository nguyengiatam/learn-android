<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v_01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/v_02"
        app:layout_constraintBottom_toTopOf="@id/v_03"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="#904563"/>
    <View
        android:id="@+id/v_02"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/v_01"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="#098457"/>
    
    <View
        android:id="@+id/v_03"
        app:layout_constraintTop_toBottomOf="@id/v_01"
        app:layout_constraintBottom_toBottomOf="@id/v_04"
        app:layout_constraintLeft_toRightOf="@id/v_04"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="#095679"/>

    <View
        android:id="@+id/v_04"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_03"
        app:layout_constraintBottom_toTopOf="@id/v_06"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="#587653"/>

    <View
        app:layout_constraintTop_toBottomOf="@id/v_03"
        app:layout_constraintLeft_toRightOf="@id/v_04"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#676459"/>

    <View
        android:id="@+id/v_06"
        app:layout_constraintTop_toBottomOf="@id/v_04"
        app:layout_constraintLeft_toRightOf="@id/v_04"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#121343"/>

</androidx.constraintlayout.widget.ConstraintLayout>