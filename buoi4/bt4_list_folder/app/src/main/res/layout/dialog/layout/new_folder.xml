<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_dl_new_folder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="New Folder"
        android:textColor="#000000"
        android:background="#009988"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/edt_dl_new_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:autofillHints="username"
        android:hint="Nhập tên thư mục"
        app:layout_constraintTop_toBottomOf="@+id/title_dl_new_folder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/cancel_dl_new_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay lại"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textColor="#009988"
        app:layout_constraintTop_toBottomOf="@+id/edt_dl_new_folder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/agree_new_folder"/>

    <TextView
        android:id="@+id/agree_new_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm mới"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textColor="#009988"
        app:layout_constraintRight_toLeftOf="@id/cancel_dl_new_folder"
        app:layout_constraintTop_toBottomOf="@+id/edt_dl_new_folder"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>