<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/folder"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ic_edit"
        app:layout_constraintLeft_toRightOf="@id/ic_folder"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:text="Video"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="9"/>

    <ImageView
        android:id="@+id/ic_folder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_folder"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@id/folder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/folder"
        app:layout_constraintBottom_toBottomOf="@id/folder"/>

    <ImageView
        android:id="@+id/ic_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@id/folder"
        app:layout_constraintTop_toTopOf="@id/folder"
        app:layout_constraintBottom_toBottomOf="@id/folder"
        app:layout_constraintRight_toLeftOf="@id/ic_cancel"/>

    <ImageView
        android:id="@+id/ic_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/folder"
        app:layout_constraintBottom_toBottomOf="@id/folder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ic_edit"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>