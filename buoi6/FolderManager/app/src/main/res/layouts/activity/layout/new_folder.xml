<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_vtc_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/new_folder_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/input_new_name_folder">
        <TextView
            android:layout_gravity="center_horizontal"
            android:text="Thêm thư mục"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/back_home"
            android:layout_gravity="start"
            android:textStyle="normal"
            android:textSize="20sp"
            android:text="Hủy"
            android:textColor="#03A9F4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/save_folder"
            android:layout_gravity="end"
            android:textStyle="normal"
            android:textSize="20sp"
            android:text="Lưu"
            android:textColor="#03A9F4"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/input_new_name_folder"
        style="@style/input_name_folder"
        android:background="@drawable/radius_15dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/new_folder_toolbar"
        app:layout_constraintBottom_toTopOf="@id/input_new_description_folder"/>

    <EditText
        android:id="@+id/input_new_description_folder"
        style="@style/input_description_folder"
        app:layout_constraintVertical_weight="4"
        app:layout_constraintTop_toBottomOf="@id/input_new_name_folder"
        app:layout_constraintBottom_toBottomOf="@id/gl_vtc_50"/>


</androidx.constraintlayout.widget.ConstraintLayout>