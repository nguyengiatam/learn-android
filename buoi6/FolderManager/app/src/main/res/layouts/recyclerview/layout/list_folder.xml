<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_folder"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/ic_folder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_folder"
        app:layout_constraintBottom_toTopOf="@id/delimitation"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/folder_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/folder_name"
        style="@style/txv_list_folder"
        android:layout_marginBottom="1dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/folder_description"
        app:layout_constraintHorizontal_weight="9"
        app:layout_constraintLeft_toRightOf="@id/ic_folder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_folder" />

    <TextView
        android:id="@+id/folder_description"
        style="@style/txv_list_folder"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="@id/ic_folder"
        app:layout_constraintLeft_toLeftOf="@id/folder_name"
        app:layout_constraintRight_toRightOf="@id/folder_name"
        app:layout_constraintTop_toBottomOf="@id/folder_name" />

    <View
        android:id="@+id/delimitation"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#F4F4F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ic_folder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_folder" />


</androidx.constraintlayout.widget.ConstraintLayout>